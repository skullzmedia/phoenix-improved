<Layout title="Gallery | Phoenix Casino">
    <section class="gallery-page">
        <div class="container">
            <h1 class="page-title">GALLERY</h1>
            <p class="page-subtitle">Explore the luxury and excitement of Phoenix Casino through our image gallery</p>
            
            <!-- Add mobile dropdown -->
            <div class="category-filter-mobile">
                <select class="category-select" aria-label="Filter gallery">
                    {categories.map(category => (
                        <option value={category.id}>{category.label}</option>
                    ))}
                </select>
            </div>

            <!-- Desktop filter buttons -->
            <div class="category-filter">
                {categories.map(category => (
                    <button 
                        class="filter-btn" 
                        data-category={category.id}
                        data-active={category.id === 'all' ? 'true' : 'false'}
                    >
                        {category.label}
                    </button>
                ))}
            </div>

            <!-- Grid gallery layout -->
            <div class="gallery-grid">
                {galleryItems.map(item => (
                    <div class="gallery-item" data-category={item.category}>
                        <Image 
                            src={item.image} 
                            alt={item.alt} 
                            width={item.width}
                            height={item.height}
                            quality={80}
                            loading="lazy"
                            class="gallery-image"
                        />
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Lightbox for image viewing -->
    <div class="image-lightbox" id="imageLightbox">
        <button class="lightbox-close" aria-label="Close lightbox">&times;</button>
        <img src="" alt="" class="lightbox-image">
        <p class="lightbox-caption"></p>
    </div>
</Layout>

<style>
    .gallery-page {
        padding: 3rem 0;
        background-color: var(--color-bg);
        margin-top: 140px;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .page-title {
        font-size: 3rem;
        text-align: center;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .page-subtitle {
        text-align: center;
        color: #fff;
        font-size: 1.2rem;
        max-width: 800px;
        margin: 0 auto 3rem;
