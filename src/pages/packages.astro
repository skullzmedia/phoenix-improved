---

<Layout title="Packages | Phoenixx Casino">
    <section class="page-banner">
        <div class="container">
            <h1 class="page-title">ENTRY PACKAGES</h1>
            <p class="page-subtitle">Experience luxury with our exclusive casino packages</p>
        </div>
    </section>

    <!-- Individual Packages Section with fixed labels -->
    <section class="packages-section" id="entry-packages">
        <div class="container">
            <div class="packages-grid">
                {packages.map((pkg, packageIndex) => (
                    <div class="package-card">
                        <div class="package-letter">{pkg.letter}</div>
                        <h3 class="package-name">{pkg.name}</h3>
                        
                        <div class="package-pricing">
                            <div class="price-item">Stag: ₹{pkg.pricing.stag.price} (With ₹{pkg.pricing.stag.otpc} OTPC)</div>
                            <div class="price-item">Couple: ₹{pkg.pricing.couple.price} (With ₹{pkg.pricing.couple.otpc} OTPC)</div>
                        </div>
                        
                        <ul class="package-features">
                            {pkg.features.map((feature, featureIndex) => (
                                <li class="feature-item">
                                    <div class="feature-icon">
                                        <i class={`fas fa-${feature.icon}`}></i>
                                    </div>
                                    <div class="feature-content">
                                        {feature.alcoholBrands ? (
                                            <button class="alcohol-btn" data-package={packageIndex} data-feature={featureIndex}>
                                                <span class="feature-text">{feature.text}</span>
                                                <i class="fas fa-wine-glass-alt alcohol-icon"></i>
                                            </button>
                                        ) : (
                                            <span class="feature-text">{feature.text}</span>
                                        )}
                                        {feature.note && <span class="feature-note">{feature.note}</span>}
                                    </div>
                                </li>
                            ))}
                        </ul>
                        
                        <a href="/contact" class="book-btn">Book Now</a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Improved Alcohol Brands Popup -->
    <div id="alcoholPopup" class="alcohol-popup">
        <div class="alcohol-popup-backdrop"></div>
        <div class="alcohol-popup-content">
            <button id="closePopupBtn" class="close-popup">&times;</button>
            <h2 class="popup-title">Available Alcoholic Brands</h2>
            
            <div class="package-type-label">Package Type</div>
            <div id="packageTypeName" class="package-type-name">Elite Package</div>
            <div class="popup-divider"></div>
            
            <div id="alcoholBrandsList" class="alcohol-brands-list">
                <!-- Content will be added here via JavaScript -->
            </div>
        </div>
    </div>

    <!-- Group Discounts Section -->
    <section class="group-discounts-section" id="group-discounts">
        <div class="container">
            <h2 class="section-title">Group Discounts</h2>
            
            <div class="discounts-container">
                <ul class="discount-list">
                    {groupDiscounts.map(discount => (
                        <li>
                            <i class="fas fa-circle"></i>
                            <span>{discount.text}</span>
                        </li>
                    ))}
                </ul>
                
                <a href="/contact" class="book-btn wide-btn">Book Now</a>
            </div>
        </div>
    </section>

    <!-- Day Pass Section -->
    <section class="day-pass-section" id="day-pass">
        <div class="container">
            <h2 class="section-title">DAY PACKAGE</h2>
            
            <div style="display: flex; justify-content: center;">
                <div class="package-card" style="max-width: 350px; width: 100%;">
                    <div class="package-letter">D</div>
                    <h3 class="package-name">Day Package</h3>
                    
                    <div class="package-pricing">
                        <div class="price-item">₹1000 <span>/person</span></div>
                    </div>
                    
                    <ul class="package-features">
                        <li class="feature-item">
                            <div class="feature-icon">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                            <div class="feature-content">
                                <span class="feature-text">Entry Charges - Rs 1000 / head (No OTPC applicable)</span>
                            </div>
                        </li>
                        <li class="feature-item">
                            <div class="feature-icon">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div class="feature-content">
                                <span class="feature-text">Starters</span>
                            </div>
                        </li>
                        <li class="feature-item">
                            <div class="feature-icon">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div class="feature-content">
                                <span class="feature-text">Unlimited Buffet</span>
                            </div>
                        </li>
                        <li class="feature-item">
                            <div class="feature-icon">
                                <i class="fas fa-glass-cheers"></i>
                            </div>
                            <div class="feature-content">
                                <button class="alcohol-btn" data-package="day">
                                    <span class="feature-text">Alcoholic Drinks - 2 Coupons per head: 30ml each</span>
                                    <i class="fas fa-wine-glass-alt alcohol-icon ml-1"></i>
                                </button>
                                <span class="feature-note"><a class="tc-link" data-tab="tc">*T&C Apply</a></span>
                            </div>
                        </li>
                    </ul>
                    
                    <a href="/contact" class="book-btn">Book Now</a>
                </div>
            </div>
        </div>
    </section>

    <!-- VIP Packages Section -->
    <section class="vip-packages-section" id="vip-packages">
        <div class="container">
            <h2 class="section-title">VIP PACKAGES</h2>
            
            <div class="vip-table-container">
                <table class="vip-table">
                    <thead>
                        <tr>
                            <th>Buy In</th>
                            <th>Airfare Reimbursement</th>
                            <th>Hotel Reimbursement</th>
                            <th>Nights</th>
                            <th>Hotel options (Candolim, Goa)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="vip-row">
                            <td class="buy-in">1 Lakh</td>
                            <td>NA</td>
                            <td>4000</td>
                            <td>1</td>
                            <td>Hue Guh</td>
                        </tr>
                        <tr class="vip-row">
                            <td class="buy-in">2 Lakh</td>
                            <td>8000</td>
                            <td>8000</td>
                            <td>2</td>
                            <td>Hue Guh</td>
                        </tr>
                        <tr class="vip-row">
                            <td class="buy-in">3 Lakh</td>
                            <td>12000</td>
                            <td>12000</td>
                            <td>2</td>
                            <td>ITC Fortune Select/Astor Standard</td>
                        </tr>
                        <tr class="vip-row">
                            <td class="buy-in">5 Lakh</td>
                            <td>15000</td>
                            <td>15000</td>
                            <td>2</td>
                            <td>Hilton Goa Resort/Grand Mercure/Astor Resort – Deluxe Room</td>
                        </tr>
                        <tr class="vip-row">
                            <td class="buy-in">10 Lakh</td>
                            <td>20000</td>
                            <td>20000</td>
                            <td>2</td>
                            <td>Hilton Goa Resort/Grand Mercure/Astor Resort – Suite Room</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="vip-note">
                <p>• The player needs to complete 6 times rolling/tracking to get eligible for benefits and rebates.</p>
                <p>• 1.5% on rolling / 5% on tracking or 10% on losing</p>
            </div>

            <div class="vip-cta">
                <a href="/contact" class="cta-button">
                    Contact Us
                    <span class="arrow">→</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Highlights Section -->
    <section class="highlights-section">
        <div class="container">
            <h2 class="section-title">HIGHLIGHTS</h2>
            
            <div class="highlights-grid">
                {highlights.map(highlight => (
                    <div class="highlight-card">
                        <div class="highlight-icon">
                            <i class={`fas fa-${highlight.icon}`}></i>
                        </div>
                        <h3 class="highlight-title">{highlight.title}</h3>
                        <p class="highlight-desc">{highlight.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Policy Tabs Section -->
    <section class="policy-section">
        <div class="container">
            <h2 class="section-title">POLICIES & INFORMATION</h2>
            
            <div class="policy-tabs-container">
                <div class="policy-tabs">
                    <button class="policy-tab active" data-tab="tc">T&C</button>
                    <button class="policy-tab" data-tab="otpc">OTPC</button>
                    <button class="policy-tab" data-tab="general">General</button>
                </div>
                
                <div class="policy-content-container">
                    <!-- T&C Tab Content -->
                    <div class="policy-content active" id="tc-content">
                        <h3 class="policy-title">Terms & Conditions</h3>
                        <div class="policy-text">
                            <ul class="policy-list">
                                <li>All bookings made through the Call Centre and Website are non-refundable</li>
                                <li>Rescheduling or cancellation is not allowed within 24 hours of the scheduled date of visit</li>
                                <li>One-time date change is allowed to reschedule the visit for a future date with an applicable difference amount payable depending on the pricing at the time of revision. Request to be placed 24 hours ahead of the scheduled date of visit</li>
                                <li>If the pricing for the revised booking is of a lesser amount than your original booking, the remainder is not payable to Guest</li>
                                <li>Cancellation due to valid medical emergencies is subject to a full refund. However, the same will be addressed post verification of submitted documents</li>
                                <li>No cancellations/refunds are allowed for bookings made for blackout dates or at special rates</li>
                                <li>No cancellations/refunds or transfer of tickets in case of no show or unutilized bookings</li>
                                <li>Refunds shall be issued to the payment method used for the purchase of original tickets/packages. Once refund request is generated, the same will be processed within 10 working days</li>
                                <li>No refund can be processed if a guest utilizes the playing coupons offered to them as part of their package</li>
                                <li>Refund & Cancellation policy is subject to change without notice.</li>
                                <li>Management's decision shall remain final.</li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- OTPC Tab Content -->
                    <div class="policy-content" id="otpc-content">
                        <h3 class="policy-title">OTPC</h3>
                        <div class="policy-text">
                            <ul class="policy-list">
                                <li>Roulette Table - Even Chances only.</li>
                                <li>Baccarat - Only Primary bet (player) & no optional bet</li>
                                <li>Andar Bahar - only andar</li>
                                <li>Blackjack - Only primary bets no insurance & no surrender</li>
                                <li>OTPC cannot be encashed</li>
                                <li>OTPC cannot be played on the slot machines/evona/indian flush</li>
                                <li>OTPC can only be played once regardless of the outcome of the game it will be retained by the dealer</li>
                                <li>OTPC are in denominations of 500 & cannot be broken down to lower denominations</li>
                                <li>Management decision is final</li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- General Tab Content -->
                    <div class="policy-content" id="general-content">
                        <h3 class="policy-title">General Information</h3>
                        <div class="policy-text">
                            <ul class="policy-list">
                                <li>Dress Code: Smart Casuals</li>
                                <li>Carry Govt ID</li>
                                <li>Entry age 21+</li>
                                <li>Entry valid till 06:00 am</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Page Banner */
    .page-banner {
        padding: 8rem 0 2rem;
        background-color: #000;
        background-size: cover;
        background-position: center;
        text-align: center;
        position: relative;
    }
    
    .page-banner::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 1;
    }
    
    .page-banner .container {
        position: relative;
        z-index: 2;
    }
    
    .page-title {
        font-size: 3.5rem;
        color: #e7c980;
        margin-bottom: 1rem;
        text-transform: uppercase;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .page-subtitle {
        font-size: 1.2rem;
        color: #fff;
        max-width: 700px;
        margin: 0 auto;
    }

    /* Common Styles */
    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .section-title {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
        text-transform: uppercase;
    }
    
    /* Packages Section */
    .packages-section {
        padding: 3rem 0;
        background-color: #000;
    }
    
    .packages-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }
    
    .package-card {
        border: 1px solid rgba(231, 201, 128, 0.3);
        border-radius: 8px;
        padding: 2.5rem 2rem;
        background-color: rgba(20, 20, 20, 0.5);
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .package-card:hover {
        transform: translateY(-5px); 
        box-shadow: 0 10px 25px rgba(231, 201, 128, 0.1);
        border-color: rgba(231, 201, 128, 0.5);
    }
    
    .package-letter {
        font-size: 5rem;
        color: #e7c980;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
        line-height: 1;
        transition: all 0.3s ease;
    }
    
    .package-name {
        text-align: center;
        font-size: 1.5rem;
        color: #e7c980;
        margin-bottom: 2rem;
        font-weight: 400;
        text-transform: lowercase;
    }
    
    .package-pricing {
        margin-bottom: 1.5rem;
    }
    
    .price-item {
        color: #fff;
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }
    
    .package-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
    }
    
    .package-features li {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
        margin-bottom: 1rem;
        color: #ccc;
    }
    
    .package-features i {
        color: #e7c980;
        font-size: 1rem;
    }
    
    .feature-note {
        display: block;
        margin-top: 0.3rem;
        color: #e7c980;
        font-size: 0.85rem;
    }
    
    .book-btn {
        display: inline-block;
        background-color: #e7c980;
        color: #000;
        text-align: center;
        padding: 1rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-top: auto;
    }
    
    .book-btn:hover {
        background-color: #d4b76e;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(231, 201, 128, 0.4);
    }
    /* Group Discounts Section */
    .group-discounts-section {
        padding: 3rem 0;
        background-color: #0c0c0c;
        border-top: 1px solid rgba(231, 201, 128, 0.1);
        border-bottom: 1px solid rgba(231, 201, 128, 0.1);
    }

    .day-pass-section {
        padding: 3rem 0;
    }
    
    .discounts-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        border: 1px solid rgba(231, 201, 128, 0.3);
        border-radius: 8px;
    }
    
    .discount-list {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
    }
    
    .discount-list li {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.2rem;
        color: #fff;
        font-size: 1.1rem;
    }
    
    .discount-list i {
        color: #e7c980;
        font-size: 0.5rem;
    }
    
    .wide-btn {
        display: block;
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }
    
    /* Highlights Section */
    .highlights-section {
        padding: 2rem 0;
        background-color: #000;
    }
    
    .highlights-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 3rem;
    }
    
    .highlight-card {
        text-align: center;
        transition: transform 0.3s ease;
    }
    
    .highlight-card:hover {
        transform: translateY(-5px);
    }
    
    .highlight-icon {
        font-size: 3rem;
        color: #e7c980;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }
    
    .highlight-title {
        font-size: 1.5rem;
        color: #e7c980;
        margin-bottom: 1rem;
    }
    
    .highlight-desc {
        color: #ccc;
        font-size: 1rem;
        line-height: 1.6;
    }
    
    /* Responsive Styles */
    @media (max-width: 1024px) {
        .packages-grid {
            gap: 1.5rem;
        }
        
        .package-card {
            padding: 2rem 1.5rem;
        }
    }
    
    @media (max-width: 768px) {
        .page-title {
            font-size: 2.5rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .packages-grid {
            grid-template-columns: 1fr;
            max-width: 500px;
            margin: 0 auto;
        }
        
        .highlights-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
        }
        
        .highlight-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        
        .highlight-title {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }
        
        .highlight-desc {
            display: none; /* Hide descriptions on medium screens */
        }
        
        .discount-list li {
            font-size: 1rem;
        }
        
        .policy-tabs {
            flex-direction: column;
        }
        
        .policy-tab {
            padding: 0.75rem;
            border-bottom: 1px solid rgba(231, 201, 128, 0.1);
        }
        
        .policy-tab:last-child {
            border-bottom: none;
        }
        
        .policy-content {
            padding: 1.5rem;
        }
        
        .alcohol-popup-content {
            width: 95%;
            max-height: 80vh;
        }
        
        .popup-header {
            padding: 1.25rem;
        }
        
        .popup-title {
            font-size: 1.3rem;
        }
        
        .popup-content {
            padding: 1.25rem;
        }
        
        .brand-item {
            padding: 0.35rem 0.7rem;
            font-size: 0.85rem;
        }
    }
    
