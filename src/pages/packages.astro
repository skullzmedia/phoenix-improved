                    "Feni": "Coconut/Cashew",
                    "Breezer": "",
                    "Wine": "Amora White/Amora Red/Langoor Red & Port wine",
                    "Energy Drink": "As per stock available",
                    "Liqueur": "Kahlua, Triple sec"
                }
            },
            {
                name: "Elite",
                alcoholBrands: {
                    "Whiskey": "Black Label, Chivas Regal 12 yrs, Singleton 12 yrs, Glenfiddich 12 yrs",
                    "Vodka": "Absolut, Ciroc & Ketel One",
                    "Rum": "Old Monk, Bacardi white/Black, Cabo, Coconut Rum",
                    "Gin": "Blue Riband, Gordons & Bombay Sapphire",
                    "Brandy": "Honey Bee, Mansion House, Morpheus xo",
                    "Beer": "House Brands + Premium & Heineken",
                    "Feni": "Coconut/Cashew",
                    "Breezer": "",
                    "Cognac": "St. Remy VSOP",
                    "Wine": "Yellow tail and Jacob Greek",
                    "Energy Drink": "Red Bull",
                    "Liqueur": "Kahlua, Triple sec & Baileys",
                    "Sparkling Wine": "Frizzano/Zampa Brut"
                }
            }
        ];
        
        // Elements
        const popup = document.getElementById('alcoholPopup');
        const closeBtn = document.getElementById('closePopupBtn');
        const packageNameEl = document.getElementById('packageTypeName');
        const brandsListEl = document.getElementById('alcoholBrandsList');
        
        // Update the click handler in setupAlcoholButtons
        const setupAlcoholButtons = () => {
            const alcoholButtons = document.querySelectorAll('.alcohol-btn');
            
            alcoholButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    let packageIndex = parseInt(this.dataset.package) || 0;
                    let packageName = packagesData[packageIndex].name;

                    // Check if this is the day package button
                    if (this.dataset.package === 'day') {
                        packageIndex = 0; // Use Regular package's alcohol list
                        packageName = "Day"; // But change the name
                    }
                    
                    // Set package name
                    packageNameEl.textContent = packageName + " Package";
                    
                    // Clear previous content
                    brandsListEl.innerHTML = '';
                    
                    // Add alcohol brands
                    const brands = packagesData[packageIndex].alcoholBrands;
                    for (const category in brands) {
                        const brandsText = brands[category];
                        
                        // Skip if no brands
                        if (!brandsText && brandsText !== '') continue;
                        
                        // Create category container
                        const categoryEl = document.createElement('div');
                        categoryEl.className = 'alcohol-category';
                        
                        // Add title
                        const titleEl = document.createElement('h4');
                        titleEl.className = 'alcohol-category-title';
                        titleEl.textContent = category;
                        categoryEl.appendChild(titleEl);
                        
                        // Handle brands
                        if (brandsText.trim() === '') {
                            // Empty category
                            const emptyEl = document.createElement('div');
                            emptyEl.className = 'no-brands';
                            emptyEl.textContent = 'Available upon request';
                            categoryEl.appendChild(emptyEl);
                        } else {
                            // Create brands list
                            const listEl = document.createElement('ul');
                            listEl.className = 'brand-list';
                            
                            // Add each brand
                            const brandArray = brandsText.split(',');
                            brandArray.forEach(brand => {
                                const brandName = brand.trim();
                                if (brandName) {
                                    const itemEl = document.createElement('li');
                                    itemEl.className = 'brand-item';
                                    itemEl.textContent = brandName;
                                    listEl.appendChild(itemEl);
                                }
                            });
                            
                            categoryEl.appendChild(listEl);
                        }
                        
                        brandsListEl.appendChild(categoryEl);
                    }
                    
                    // Show popup
                    popup.classList.add('active');
                    document.body.style.overflow = 'hidden';
                });
            });
        };
        
        // Setup close button
        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                popup.classList.remove('active');
                document.body.style.overflow = '';
            });
        }
        
        // Close on backdrop click
        popup.addEventListener('click', (e) => {
            if (e.target === popup || e.target.classList.contains('alcohol-popup-backdrop')) {
                popup.classList.remove('active');
                document.body.style.overflow = '';
            }
        });
        
        // Close on ESC key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && popup.classList.contains('active')) {
                popup.classList.remove('active');
                document.body.style.overflow = '';
            }
        });
        
        // Initialize
        setupAlcoholButtons();
        
        // Re-initialize on potential dynamic content changes
        const observer = new MutationObserver(function(mutations) {
            setupAlcoholButtons();
        });
        
        // Start observing the document body for changes
        observer.observe(document.body, { 
            childList: true,
            subtree: true 
        });

        // Tab switching functionality
        const policyTabs = document.querySelectorAll<HTMLButtonElement>('.policy-tab');
        const policyContents = document.querySelectorAll<HTMLDivElement>('.policy-content');

        policyTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                // Remove active class from all tabs and contents
                policyTabs.forEach(t => t.classList.remove('active'));
                policyContents.forEach(c => c.classList.remove('active'));
                
                // Add active class to clicked tab
                tab.classList.add('active');
                
                // Get the tab data attribute
                const tabId = tab.getAttribute('data-tab');
                
                // Activate corresponding content
                const content = document.getElementById(`${tabId}-content`) as HTMLDivElement | null;
                if (content) {
                    content.classList.add('active');
                }
            });
        });

        // Package tab switching
        const packageButtons = document.querySelectorAll<HTMLButtonElement>('.package-button');
        const packageImages = document.querySelectorAll<HTMLImageElement>('.packages-image img');
        const packageDetails = document.querySelectorAll<HTMLDivElement>('.package-details');

        packageButtons.forEach((button) => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons and images
                packageButtons.forEach(btn => btn.classList.remove('active'));
                packageImages.forEach(img => img.classList.remove('active'));
                packageDetails.forEach(detail => detail.classList.remove('active'));
                
                // Add active class to clicked button and corresponding image
                button.classList.add('active');
                
                const targetId = button.getAttribute('data-target');
                const targetImage = document.getElementById(`${targetId}-image`) as HTMLImageElement | null;
                const targetDetail = document.getElementById(`${targetId}-details`) as HTMLDivElement | null;
                
                if (targetImage) targetImage.classList.add('active');
                if (targetDetail) targetDetail.classList.add('active');
            });
        });
    });
</script>