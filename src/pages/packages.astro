    }
];

// Highlights information
const highlights = [
    {
        icon: 'glass-martini-alt',
        title: 'Food & Drinks',
        description: 'Enjoy premium gourmet dishes and specialty cocktails'
    },
    {
        icon: 'dice',
        title: 'Games',
        description: 'Experience the thrill of our casino games and slot machines'
    },
    {
        icon: 'music',
        title: 'Entertainment',
        description: 'Live shows, performances, and exciting events'
