    transform: scale(1.05);
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card-content h3 {
    color: #e7c980;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .description {
    color: #ccc;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }
  
  .schedule {
    color: #e7c980;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  /* Upcoming Events Section */
  .upcoming-events {
    padding: 2rem 0;
    background-color: #0a0a0a;
  }
  
  .events-container {
    width: 100%;
    overflow: hidden;
    padding: 1rem 0;
  }
  
