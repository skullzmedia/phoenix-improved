---

<Layout title="Entertainment | Phoenixx Casino">
  <!-- Banner Section -->
  <section class="entertainment-banner">
    <div class="banner-slider">
      <div class="slides-container">
        {bannerSlides.map((slide, idx) => (
          <div class="slide" data-index={idx}>
            <Image
              src={slide.image}
              alt={slide.alt}
              width={1400}
              height={600}
              class="slide-image"
            />
            <div class="slide-content">
              <h1>{slide.title}</h1>
              <p>{slide.subtitle}</p>
            </div>
          </div>
        ))}
      </div>
      <button class="banner-nav prev" aria-label="Previous slide">‚ùÆ</button>
      <button class="banner-nav next" aria-label="Next slide">‚ùØ</button>
      <div class="banner-dots">
        {bannerSlides.map((_, idx) => (
          <button key={idx} class="dot" data-index={idx} aria-label={`Go to slide ${idx + 1}`}></button>
        ))}
      </div>
    </div>
  </section>

  <!-- Daily Entertainment Section -->
  <section id="daily-entertainment" class="daily-entertainment">
    <div class="container">
      <h2 class="section-title">DAILY ENTERTAINMENT</h2>
      <p class="section-subtitle">Experience the vibrant entertainment offerings at Phoenixx Casino</p>
      <div class="entertainment-grid">
        {dailyEntertainment.map((item, idx) => (
          <div key={idx} class="entertainment-card">
            <div class="card-image">
              <Image
                src={item.image}
                alt={item.title}
                width={600}
                height={400}
                class="card-img"
              />
            </div>
            <div class="card-content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section id="upcoming-events" class="upcoming-events">
    <div class="container">
      <h2 class="section-title">UPCOMING EVENTS</h2>
      <p class="section-subtitle">Mark your calendar for these exciting upcoming events</p>
      <div class="events-container">
        <div class="events-scroll">
          {upcomingEvents.map((event, idx) => (
            <a key={idx} href="/contact" class="event-card">
              <div class="event-image">
                <Image
                  src={event.image}
                  alt={event.title}
                  width={600}
                  height={800}
                  class="event-img"
                />
              </div>
              <div class="event-content">
                <h3>{event.title}</h3>
                <p>{event.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Past Events Section -->
  <section id="past-events" class="past-events">
    <div class="container">
      <h2 class="section-title">PAST EVENTS</h2>
      <p class="section-subtitle">Relive the magical moments from our past events</p>
      <div class="videos-container">
        <div class="videos-scroll">
          {pastEvents.map((ev, idx) => (
            <div key={idx} class="video-card">
              <div class="video-frame">
                <iframe
                  src={ev.video}
                  title={ev.title}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              <div class="video-content">
                <h3>{ev.title}</h3>
                <p class="video-date">üìÖ {ev.date}</p>
                <p>{ev.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Celebrities Section -->
  <section id="celebrities">
    <WallOfFame />
  </section>
</Layout>

<style>
/* Container */
.container { max-width:1200px; margin:0 auto; padding:0 2rem; }

/* Section Titles */
.section-title {
  font-size:2.5rem;
  text-align:center;
  background:linear-gradient(90deg,#e7c980,#9e8253);
  -webkit-background-clip:text;
  color:transparent;
  margin-bottom:1rem;
  white-space: normal;
  word-break: break-word;
}
.section-subtitle {
  font-size:1.2rem;
  color:#ccc;
  text-align:center;
  margin-bottom:2rem;
}

/* Banner */
.entertainment-banner { margin-top:120px; position:relative; }
.banner-slider { position:relative; overflow:hidden; height:min(70vh,600px); }
.slides-container { position:relative; width:100%; height:100%; }
.slide { position:absolute; inset:0; opacity:0; transition:opacity .8s; }
.slide[data-index="0"] { opacity:1; }
.slide-image { width:100%; height:100%; object-fit:cover; }
.slide-content { position:absolute; inset:0; display:flex; flex-direction:column; justify-content:center; align-items:center; background:rgba(0,0,0,.5); color:#fff; padding:0 2rem; text-align:center; }
.slide-content h1 { font-size:3rem; text-transform:uppercase; background:linear-gradient(90deg,#e7c980,#9e8253); -webkit-background-clip:text; color:transparent; }
.slide-content p { font-size:1.5rem; max-width:800px; }
.banner-nav { position:absolute; top:50%; transform:translateY(-50%); background:rgba(212,175,55,.8); border:none; width:50px;height:50px;border-radius:50%;cursor:pointer;display:flex;align-items:center;justify-content:center; }
.prev { left:20px; } .next { right:20px; }
.banner-dots { position:absolute; bottom:30px; left:50%; transform:translateX(-50%); display:flex; gap:8px; }
.dot { width:10px; height:10px; border-radius:50%; background:rgba(255,255,255,.5); cursor:pointer; }
.dot.active { background:#D4AF37; transform:scale(1.2); }

/* Daily Entertainment */
.daily-entertainment { padding:4rem 0; background:#000; }
.entertainment-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(280px,1fr)); gap:2rem; }
.entertainment-card { background:#111; border-radius:10px; overflow:hidden; transition:transform .3s; }
.entertainment-card:hover { transform:translateY(-10px); }
.card-img { width:100%; height:200px; object-fit:cover; }
.card-content { padding:1rem; }
.card-content h3 { color:#e7c980; margin-bottom:.5rem; font-size:1.25rem; }
.card-content p { color:#ccc; line-height:1.5; }

/* Upcoming Events */
.upcoming-events { padding:3rem 0; background:#0a0a0a; }
.events-container { overflow-x:auto; padding:1rem 0; }
.events-scroll { display:flex; flex-wrap:wrap; justify-content:center; gap:1rem; padding:1rem; }
.event-card { flex:1 1 300px; max-width:350px; background:#111; border-radius:10px; overflow:hidden; transition:transform .3s; }
.event-card:hover { transform:translateY(-10px); }
.event-img { width:100%; height:200px; object-fit:cover; }
.event-content { padding:1rem; }
.event-content h3 { color:#e7c980; font-size:1.2rem; margin-bottom:.5rem; }
.event-content p { color:#ccc; line-height:1.4; }

/* Past Events */
.past-events { padding:3rem 0; background:#000; }
.videos-container { overflow-x:auto; padding:1rem 0; }
.videos-scroll { display:flex; flex-wrap:wrap; justify-content:center; gap:1rem; padding:1rem; }
.video-card { flex:1 1 300px; background:#111; border-radius:10px; overflow:hidden; transition:transform .3s; }
.video-card:hover { transform:translateY(-10px); }
.video-frame { position:relative; padding-top:56.25%; }
.video-frame iframe { position:absolute; inset:0; width:100%; height:100%; }
.video-content { padding:1rem; }
.video-content h3 { color:#e7c980; margin-bottom:.5rem; font-size:1.2rem; }
.video-content p { color:#ccc; line-height:1.4; }

@media (max-width:768px) {
  .section-title { font-size:2rem; }
  .daily-entertainment .section-title { font-size:2rem; }
  .event-card, .video-card { flex:1 1 45%; max-width:45%; }
}
@media (max-width:600px) {
  .event-card, .video-card { flex:1 1 100%; max-width:100%; }
}

</style>

<script>
document.addEventListener('DOMContentLoaded', ()=>{
  const slides = document.querySelectorAll('.slide');
  const dots = document.querySelectorAll('.dot');
  const prev = document.querySelector('.prev');
  const next = document.querySelector('.next');
  let current=0;
  const updateSlider=()=>{
    slides.forEach((s,i)=> s.style.opacity = i===current?'1':'0');
    dots.forEach((d,i)=> d.classList.toggle('active', i===current));
  };
  prev.addEventListener('click', ()=>{ current=(current-1+slides.length)%slides.length; updateSlider(); });
  next.addEventListener('click', ()=>{ current=(current+1)%slides.length; updateSlider(); });
  dots.forEach((d,i)=> d.addEventListener('click', ()=>{ current=i; updateSlider(); }));
  updateSlider();
  setInterval(()=>{ current=(current+1)%slides.length; updateSlider(); },5000);
});
</script>
