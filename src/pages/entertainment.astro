    display: flex;
    gap: 2rem;
    padding: 1rem;
  }
  
  .events-scroll.scrollable {
    animation: scroll 40s linear infinite;
    width: max-content;
  }
  
  .events-scroll.non-scrollable {
    width: 100%;
    animation: none;
    justify-content: center;
    flex-wrap: wrap;
  }
  
