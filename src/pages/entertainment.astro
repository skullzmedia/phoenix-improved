    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(212, 175, 55, 0.2);
    border-color: rgba(231, 201, 128, 0.4);
  }
  
  .video-frame {
    width: 100%;
    height: 225px;
    position: relative;
  }
  
  .video-frame iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
