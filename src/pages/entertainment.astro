  {
    title: "Free 500 OTPC",
    description: "Get Free 500 OTPC on our entry packages ( T&C apply )",
    image: FreeOTPC,
  },
  {
    title: "Independence Day Fiesta",
    description: "Celebrate Independence day with big wins and entertainmet.",
    image: IndependenceDay,
  }
];

// Past Events
const pastEvents = [
  {
    title: "New Year's Eve Bash",
    description: "Our spectacular New Year celebration featuring celebrity performances and breathtaking fireworks.",
    video: "https://www.youtube.com/embed/oMvX-g5jKxE",
    date: "Dec 31, 2024"
  },
  {
    title: "Celebrity Night Extravaganza",
    description: "A dazzling fashion showcase featuring Urvashi Rautela, Sonal Chauhan, and Amyra Uttam celebrity appearances.",
    video: "https://youtube.com/embed/yzPjaQ8jrtQ",
    date: "Feb 20, 2025"
  }
];

// Banner slides
const bannerSlides = [
  {
    image: EntertainmentBanner,
    alt: "Entertainment at Phoenixx Casino",
    title: "EXPERIENCE THE MAGIC",
    subtitle: "Unforgettable entertainment experiences await you"
  },
  {
    image: RussianDance,
    alt: "Live Performances",
    title: "LIVE PERFORMANCES",
    subtitle: "Enjoy electrifying shows by talented artists"
  },
  {
    image: CelebrityBanner ,
    alt: "Celebrity Appearances",
