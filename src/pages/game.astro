--- 
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import aboutImage from '../assets/abtus/image.jpg';
import AboutSectionImage from '../assets/abtus/aboutsection.jpeg';
import GameOne from '../assets/abtus/game-one.png';
import GameTwo from '../assets/abtus/game-two.png';

// Highlights with icons
const highlights = [
  {
    icon: 'dice',
    title: '20+ Games',
    description: 'Enjoy a variety of card games, slot machines, and table games'
  },
  {
    icon: 'smoking',
    title: 'Hookah Lounge',
    description: 'Relax in our premium hookah lounge with exclusive flavors'
  },
  {
    icon: 'crown',
    title: 'VIP Room',
    description: 'Experience luxury gaming in our exclusive VIP rooms'
  },
  {
    icon: 'music',
    title: 'Live Performances',
    description: 'Enjoy regular live entertainment and special celebrity events'
  },
  {
    icon: 'utensils',
    title: 'Restaurant',
    description: 'Savor gourmet cuisine with our premium dining experience'
  },
  {
    icon: 'glass-martini-alt',
    title: 'Phoenixx Bar',
    description: 'Taste our signature cocktails and premium spirits'
  }
];

// Games data
const gamesData = [
  {
    id: 1,
    title: "Andar Bahar",
    description: "A simple and fast-paced Indian card game where players bet on which side (Andar or Bahar) a matching card will appear. The dealer draws cards alternately to each side until a match is found."
  },
  {
    id: 2,
    title: "Baccarat",
    description: "A popular card game where players bet on whether the Player's hand or the Banker's hand will be closer to a total of 9, or if the round will end in a tie. It's a game of chance with simple rules but offers high stakes."
  },
  {
    id: 3,
    title: "Blackjack",
    description: "Also known as 21, the goal is to have a hand value closer to 21 than the dealer without going over. Players are dealt two cards and can choose to 'hit' for more cards or 'stand' to keep their current hand."
  },
  {
    id: 4,
    title: "Roulette",
    description: "A classic casino game where players place bets on where a ball will land on a spinning wheel. The wheel has numbered and colored slots (red, black, and green), and players can bet on specific numbers, colors, or ranges of numbers."
  },
  {
    id: 5,
    title: "Dragon Tiger",
    description: "A simple two-card game where players bet on which side (Dragon or Tiger) will have the higher card. It's a fast game, often compared to Baccarat, with only two possible outcomes and a tie option."
  },
  {
    id: 6,
    title: "3 Card Poker",
    description: "A poker variant where players are dealt three cards and aim to have a higher-ranking hand than the dealer. There are two betting options: Ante/Play or Pair Plus, with various hand rankings, including straight flushes and three-of-a-kind."
  },
  {
    id: 7,
    title: "Slot Machine",
    description: "A game of chance where players spin reels featuring various symbols. Wins are based on matching symbols on paylines, and modern slots often feature bonus rounds, wilds, and progressive jackpots."
  },
  {
    id: 8,
    title: "Spintec",
    description: "An automated electronic gaming system offering live, virtual, and multi-game setups for casino table games like Roulette and Baccarat, known for providing a smooth, immersive gaming experience."
  },
  {
    id: 9,
    title: "Casino War",
    description: "A simple card game where players bet on having a higher card than the dealer. If the player's card is higher, they win. In case of a tie, players can choose to go to 'war' for an additional bet."
  },
  {
    id: 10,
    title: "Sic Bo",
    description: "A dice-based game originating in China. Players bet on various possible outcomes of the roll of three dice, with options to wager on combinations, totals, or specific dice values. It's a game of chance with multiple betting strategies."
  }
];

// Split games into two groups
const gamesGroup1 = gamesData.slice(0, 5);
const gamesGroup2 = gamesData.slice(5, 10);
---

<Layout title="Games | Phoenixx Casino">
  <!-- Games Section 1 - Image left, games right -->
  <section class="games-section" id="game-sec" style="padding-top: 120px;">
    <div class="container">
      <h2 class="section-title">Our Popular Games</h2>
      <p class="section-subtitle">Experience the thrill of our diverse game selection</p>
      <div class="games-container">
        <div class="games-image">
          <Image
            src={GameOne}
            alt="Casino Game Table"
            width={800}
            height={600}
            quality={80}
            class="game-img"
          />
        </div>
        <div class="games-accordions">
          {gamesGroup1.map(game => (
            <div class="game-accordion">
              <div class="game-header">
                <h3>{game.title}</h3>
                <div class="accordion-icon">
                  <i class="fas fa-plus"></i>
                  <i class="fas fa-minus"></i>
                </div>
              </div>
              <div class="game-content">
                <p>{game.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Games Section 2 - Games left, image right -->
  <section class="games-section games-section-alt">
    <div class="container">
      <div class="games-container games-container-reverse">
        <div class="games-accordions">
          {gamesGroup2.map(game => (
            <div class="game-accordion">
              <div class="game-header">
                <h3>{game.title}</h3>
                <div class="accordion-icon">
                  <i class="fas fa-plus"></i>
                  <i class="fas fa-minus"></i>
                </div>
              </div>
              <div class="game-content">
                <p>{game.description}</p>
              </div>
            </div>
          ))}
        </div>
        <div class="games-image">
          <Image
            src={GameTwo}
            alt="Casino Game Table"
            width={800}
            height={600}
            quality={80}
            class="game-img"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Banner */
  .page-banner {
    padding: 3rem 0 4rem;
    background-color: #000;
    background-size: cover;
    background-position: center;
    text-align: center;
    position: relative;
    margin-top: 120px; /* Account for fixed nav height */
  }
  .page-banner::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 1;
  }
  .page-banner .container {
    position: relative;
    z-index: 2;
  }
  .page-title {
    font-size: 3rem;
    color: #e7c980;
    margin-bottom: 1rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .page-subtitle {
    font-size: 1.2rem;
    color: #fff;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Common Styles */
  .container {
    max-width: 1200px; /* Match nav container */
    margin: 0 auto;
    padding: 0 2rem; /* Match nav padding */
  }
  .section-title {
    font-size: 2.5rem;
    color: #e7c980;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .section-subtitle {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 3rem;
    text-align: center;
  }
  .cta-button {
    display: inline-block;
    background-color: #D4AF37;
    color: #000;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
  }
  .cta-button:hover {
    background-color: #C5A028;
    transform: translateY(-2px);
  }
  .cta-button.outline {
    background-color: transparent;
    color: #e7c980;
    border: 1px solid #e7c980;
  }
  .cta-button.outline:hover {
    background-color: rgba(231, 201, 128, 0.1);
    color: #e7c980;
  }

  /* Games Sections */
  .games-section {
    padding: 4rem 0;
    background-color: #000;
  }
  .games-section-alt {
    background-color: #0a0a0a;
  }
  .games-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }
  .games-container-reverse {
    grid-template-columns: 1fr 1fr;
  }
  .games-image {
    position: relative;
    width: 100%;
  }
  .game-img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    border: 3px solid rgba(231, 201, 128, 0.2);
  }
  .games-accordions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .game-accordion {
    background-color: rgba(20, 20, 20, 0.5);
    border: 1px solid rgba(231, 201, 128, 0.2);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .game-accordion:hover {
    border-color: rgba(231, 201, 128, 0.4);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }
  .game-header {
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    background-color: rgba(231, 201, 128, 0.05);
  }
  .game-header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: #e7c980;
    font-weight: 600;
  }
  .accordion-icon {
    color: #e7c980;
    font-size: 1rem;
  }
  .accordion-icon .fa-minus {
    display: none;
  }
  .game-accordion.active .accordion-icon .fa-plus {
    display: none;
  }
  .game-accordion.active .accordion-icon .fa-minus {
    display: block;
  }
  .game-content {
    max-height: 0;
    overflow: hidden;
    padding: 0 1.25rem;
    transition: all 0.3s ease-in-out;
    opacity: 0;
  }
  .game-accordion.active .game-content {
    max-height: 500px;
    padding: 0 1.25rem 1.25rem;
    opacity: 1;
  }
  .game-content p {
    color: #ccc;
    line-height: 1.7;
    margin: 0;
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .highlights-grid {
      gap: 1.5rem;
    }
    .games-container {
      gap: 3rem;
    }
  }
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem; /* Match nav mobile padding */
    }
    .page-banner {
      margin-top: 100px; /* Account for smaller mobile nav */
      padding: 6rem 0 3rem;
    }
    .page-title {
      font-size: 2.5rem;
    }
    .section-title {
      font-size: 2rem;
    }
    .intro-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .intro-text {
      padding-right: 0;
      order: 2;
    }
    .intro-image {
      order: 1;
    }
    .highlights-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .games-container,
    .games-container-reverse {
      display: block !important;
      width: 100% !important;
    }
    .games-image,
    .games-accordions {
      width: 100% !important;
      max-width: 100% !important;
      margin-bottom: 2rem;
    }
    /* For the second section, show image first on mobile */
    .games-container-reverse .games-image {
      order: -1;
      margin-bottom: 2rem;
    }
    .games-container-reverse {
      display: flex !important;
      flex-direction: column !important;
    }
    .game-accordion {
      width: 100% !important;
    }
    .game-accordion.active .game-content {
      max-height: 500px !important;
    }
    .map-section {
      height: 400px;
    }
    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }
    .cta-button {
      width: 100%;
    }
  }
  @media (max-width: 480px) {
    .about-intro,
    .highlights-section,
    .about-cta,
    .games-section {
      padding: 3rem 0;
    }
    .page-title {
      font-size: 2rem;
    }
    .section-title {
      font-size: 1.75rem;
    }
    .intro-description {
      font-size: 1rem;
    }
    .highlights-grid {
      grid-template-columns: 1fr;
    }
    .highlight-card {
      padding: 2rem 1.5rem;
    }
    .cta-title {
      font-size: 2rem;
    }
    .map-section {
      height: 350px;
    }
    .games-accordions {
      gap: 0.75rem;
    }
    .game-header {
      padding: 1rem;
    }
    .game-header h3 {
      font-size: 1.1rem;
    }
    .game-accordion.active .game-content {
      max-height: 500px;
      padding: 0 1rem 1rem;
    }
    .game-content p {
      font-size: 0.95rem;
      line-height: 1.6;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const accordions = document.querySelectorAll('.game-accordion');
    accordions.forEach(accordion => {
      const header = accordion.querySelector('.game-header');
      if (header) {
        header.addEventListener('click', function() {
          // Close all other accordions
          accordions.forEach(otherAccordion => {
            if (otherAccordion !== accordion && otherAccordion.classList.contains('active')) {
              otherAccordion.classList.remove('active');
            }
          });
          // Toggle this accordion
          accordion.classList.toggle('active');
        });
      }
    });
  });
</script>
