---
import Layout from '../layouts/Layout.astro';

// Contact information
const contactInfo = {
  address: "Hilton Goa Resort, Saipem, Candolim",
  phone: "+919960007937",
  email: "marketing@phoenixcasino.in"
};
---

<Layout title="Contact Us | Phoenix Casino">
  <section class="page-banner">
    <div class="container">
      <h1 class="page-title">Contact Us</h1>
      <p class="page-subtitle">Get in touch with our team for bookings and inquiries</p>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-container">
        <div class="contact-info">
          <h2 class="contact-heading">CONTACT US</h2>
          <h3 class="contact-subheading">Have Questions? Get in touch!</h3>
          
          <div class="contact-details">
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="contact-text">
                {contactInfo.address}
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-phone-alt"></i>
              </div>
              <div class="contact-text">
                <a href={`tel:${contactInfo.phone}`}>{contactInfo.phone}</a>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-text">
                <a href={`mailto:${contactInfo.email}`}>{contactInfo.email}</a>
              </div>
            </div>
          </div>
          
          <div class="business-hours">
            <h4 class="hours-heading">Business Hours</h4>
            <p class="hours-text">Open 24 hours</p>
            <p class="hours-note">Entry valid till 06:00 am</p>
          </div>
          
          <div class="social-links">
            <a href="#" class="social-link" aria-label="Facebook">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="social-link" aria-label="Instagram">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="social-link" aria-label="WhatsApp">
              <i class="fab fa-whatsapp"></i>
            </a>
          </div>
        </div>
        
        <div class="contact-form-container">
          <form id="contactForm" class="contact-form">
            <div class="form-field">
              <label for="name" class="field-icon">
                <i class="fas fa-user"></i>
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="Name" 
                required
              />
            </div>
            
            <div class="form-field">
              <label for="phone" class="field-icon">
                <i class="fas fa-phone-alt"></i>
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                placeholder="Phone Number" 
                required
              />
            </div>
            
            <div class="form-field">
              <label for="email" class="field-icon">
                <i class="fas fa-envelope"></i>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="Email" 
                required
              />
            </div>
            
            <div class="form-field">
              <label for="message" class="field-icon">
                <i class="fas fa-comment"></i>
              </label>
              <textarea 
                id="message" 
                name="message" 
                placeholder="Your Message" 
                required
                rows="4"
              ></textarea>
            </div>
            
            <button type="submit" class="submit-btn">
              Send WhatsApp Message
              <i class="fas fa-arrow-right"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  
  <section class="map-section">
    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3845.5664728872505!2d73.7595423!3d15.5160693!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bbfc09c4be97b3f%3A0x89f9da2c01a9e2f9!2sHilton%20Goa%20Resort!5e0!3m2!1sen!2sin!4v1649252930000!5m2!1sen!2sin"
        width="100%"
        height="500"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>
</Layout>

<style>
  /* Page Banner - adjusted to match nav */
  .page-banner {
    padding: 3rem 0 4rem;
    background-color: #000;
    background-size: cover;
    background-position: center;
    text-align: center;
    position: relative;
    margin-top: 120px; /* Account for fixed nav height */
  }
  
  .page-banner::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 1;
  }
  
  .page-banner .container {
    position: relative;
    z-index: 2;
  }
  
  .page-title {
    font-size: 3rem;
    color: #e7c980;
    margin-bottom: 1rem;
    text-transform: uppercase;
    background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-subtitle {
    font-size: 1.2rem;
    color: #fff;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Common Styles - adjusted to match nav container */
  .container {
    max-width: 1200px; /* Match nav container */
    margin: 0 auto;
    padding: 0 2rem; /* Match nav padding */
  }
  
  /* Contact Section */
  .contact-section {
    padding: 5rem 0;
    background-color: #000;
    position: relative;
  }
  
  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  /* Contact Info */
  .contact-heading {
    font-size: 1.2rem;
    color: #e7c980;
    margin-bottom: 1rem;
    letter-spacing: 2px;
  }
  
  .contact-subheading {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: 2.5rem;
    font-weight: 600;
  }
  
  .contact-details {
    margin-bottom: 2.5rem;
  }
  
  .contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }
  
  .contact-icon {
    width: 40px;
    height: 40px;
    background-color: rgba(231, 201, 128, 0.1);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #e7c980;
    font-size: 1rem;
    margin-right: 1rem;
    flex-shrink: 0;
  }
  
  .contact-text {
    color: #fff;
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .contact-text a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .contact-text a:hover {
    color: #e7c980;
  }
  
  /* Business Hours */
  .business-hours {
    margin-bottom: 2.5rem;
  }
  
  .hours-heading {
    font-size: 1.2rem;
    color: #e7c980;
    margin-bottom: 1rem;
  }
  
  .hours-text {
    color: #fff;
    margin-bottom: 0.5rem;
  }
  
  .hours-note {
    color: #999;
    font-size: 0.9rem;
  }
  
  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(231, 201, 128, 0.1);
    color: #e7c980;
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background-color: #e7c980;
    color: #000;
    transform: translateY(-3px);
  }
  
  /* Contact Form */
  .contact-form-container {
    background-color: rgba(20, 20, 20, 0.5);
    border: 1px solid rgba(231, 201, 128, 0.3);
    border-radius: 8px;
    padding: 3rem;
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-field {
    position: relative;
  }
  
  .field-icon {
    position: absolute;
    left: 0;
    top: 0;
    width: 50px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #e7c980;
    font-size: 1rem;
  }
  
  .contact-form input {
    width: 100%;
    padding: 15px 15px 15px 50px;
    font-size: 1rem;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid rgba(231, 201, 128, 0.3);
    color: #fff;
    transition: border-color 0.3s ease;
  }
  
  .contact-form input:focus {
    outline: none;
    border-color: #e7c980;
  }
  
  .contact-form input::placeholder {
    color: #999;
  }
  
  .contact-form textarea {
    width: 100%;
    padding: 15px 15px 15px 50px;
    font-size: 1rem;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid rgba(231, 201, 128, 0.3);
    color: #fff;
    transition: border-color 0.3s ease;
    resize: vertical;
    min-height: 100px;
  }
  
  .contact-form textarea:focus {
    outline: none;
    border-color: #e7c980;
  }
  
  .contact-form textarea::placeholder {
    color: #999;
  }
  
  .submit-btn {
    background-color: #D4AF37; /* Match nav button color */
    color: #000;
    border: none;
    padding: 0.75rem 1.5rem; /* Match nav button padding */
    font-size: 0.9rem; /* Match nav button font size */
    font-weight: 600;
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    margin-top: 1rem;
    letter-spacing: 0.5px; /* Match nav button letter spacing */
  }
  
  .submit-btn:hover {
    background-color: #C5A028; /* Match nav button hover color */
    transform: translateY(-2px); /* Match nav button hover transform */
  }
  
  /* Map Section - Full Width but aligned contents */
  .map-section {
    width: 100%;
    height: 500px;
  }
  
  .map-container {
    width: 100%;
    height: 100%;
  }
  
  /* Responsive Styles */
  @media (max-width: 1024px) {
    .contact-container {
      gap: 3rem;
    }
    
    .contact-form-container {
      padding: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem; /* Match nav mobile padding */
    }
    
    .page-banner {
      margin-top: 100px; /* Account for smaller mobile nav */
      padding: 6rem 0 3rem;
    }
    
    .page-title {
      font-size: 2.5rem;
    }
    
    .contact-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .contact-subheading {
      font-size: 2rem;
    }
    
    .map-section {
      height: 400px;
    }
  }
  
  @media (max-width: 480px) {
    .contact-section {
      padding: 3rem 0;
    }
    
    .page-title {
      font-size: 2rem;
    }
    
    .contact-subheading {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }
    
    .contact-form-container {
      padding: 1.5rem;
    }
    
    .contact-icon {
      width: 36px;
      height: 36px;
    }
    
    .map-section {
      height: 350px;
    }
  }

  /* Add these styles for date input compatibility */
  input[type="date"]::-webkit-calendar-picker-indicator {
    background: transparent;
    bottom: 0;
    color: transparent;
    cursor: pointer;
    height: auto;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: auto;
  }

  input[type="date"]::-webkit-inner-spin-button,
  input[type="date"]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type="date"] {
    -webkit-appearance: textfield;
    -moz-appearance: textfield;
    appearance: textfield;
  }

  /* Ensure the date input matches other inputs */
  input[type="date"]::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  /* Style for Safari and other browsers */
  @media screen and (-webkit-min-device-pixel-ratio: 0) {
    input[type="date"]:before {
      color: rgba(255, 255, 255, 0.6);
      content: attr(placeholder);
    }
    input[type="date"].has-value:before {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form values
        const nameInput = document.getElementById('name') as HTMLInputElement;
        const phoneInput = document.getElementById('phone') as HTMLInputElement;
        const emailInput = document.getElementById('email') as HTMLInputElement;
        const messageInput = document.getElementById('message') as HTMLTextAreaElement;
        
        if (nameInput && phoneInput && emailInput && messageInput) {
          const name = nameInput.value;
          const phone = phoneInput.value;
          const email = emailInput.value;
          const message = messageInput.value;
          
          // Construct WhatsApp message
          const whatsappMessage = `Hello, my name is ${name}.\n\n${message}\n\nMy contact details:\nPhone: ${phone}\nEmail: ${email}`;
          
          // Construct WhatsApp URL with your number
          const whatsappURL = `https://wa.me/919960007937?text=${encodeURIComponent(whatsappMessage)}`;
          
          // Open WhatsApp
          window.open(whatsappURL, '_blank');
        }
      });
      
      // Add visual feedback for form inputs
      const inputs = document.querySelectorAll('.contact-form input, .contact-form textarea');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement?.classList.add('input-focus');
        });
        
        input.addEventListener('blur', function() {
          if (!(this as HTMLInputElement | HTMLTextAreaElement).value) {
            this.parentElement?.classList.remove('input-focus');
          }
        });
      });
    }
  });
</script> 