<style>
	.terms-section {
		padding: 4rem 0;
		margin-top: 140px;
		background-color: var(--color-bg);
		min-height: 80vh;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.section-title {
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 2rem;
		background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
	}

	.terms-content {
		background: rgba(15, 15, 15, 0.7);
		padding: 2rem;
		border-radius: 10px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
		border: 1px solid rgba(211, 175, 55, 0.2);
	}

	.intro-text {
		color: #e0e0e0;
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	.terms-item {
		margin-bottom: 2rem;
		border-bottom: 1px solid rgba(211, 175, 55, 0.2);
		padding-bottom: 1.5rem;
	}

	.terms-item:last-child {
		border-bottom: none;
		margin-bottom: 1rem;
	}

	.terms-heading {
		color: #e7c980;
		font-size: 1.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.terms-details p {
		color: #e0e0e0;
		margin-bottom: 0.75rem;
		line-height: 1.5;
	}

	.contact-info, .agreement {
		margin-top: 2rem;
		padding-top: 1rem;
		color: #e0e0e0;
		line-height: 1.6;
	}

	.agreement {
		font-weight: 500;
		text-align: center;
		font-size: 1.1rem;
		border-top: 1px solid rgba(211, 175, 55, 0.2);
		padding-top: 1.5rem;
		margin-top: 1.5rem;
	}

	.link {
		color: #e7c980;
		text-decoration: underline;
		transition: color 0.3s ease;
	}

	.link:hover {
		color: #d4af37;
	}

	.address {
		font-style: italic;
	}

	@media (max-width: 768px) {
		.terms-section {
			padding: 3rem 0;
			margin-top: 150px;
		}

		.section-title {
			font-size: 2rem;
		}

		.terms-content {
			padding: 1.5rem;
		}

		.intro-text, .terms-details p {
			font-size: 1rem;
		}

		.terms-heading {
			font-size: 1.3rem;
		}
	}

	@media (max-width: 480px) {
		.terms-section {
			padding: 2rem 0;
		}

		.container {
			padding: 0 1rem;
		}

		.section-title {
			font-size: 1.8rem;
		}

		.terms-content {
			padding: 1.25rem;
		}

		.terms-heading {
			font-size: 1.2rem;
		}

		.agreement {
			font-size: 1rem;
		}
	}
</style> 