    background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .filter-btn[data-active="true"]::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
  }

  /* ========== Gallery Layout ========== */
  .gallery-container {
    width: 100%;
    overflow: hidden;
    padding: 1rem 0;
    position: relative;
  }

