    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(231, 201, 128, 0);
    transition: none;
    border-radius: 12px;
    pointer-events: none;
  }

  .gallery-item:hover::after {
    background: rgba(231, 201, 128, 0.1);
  }

