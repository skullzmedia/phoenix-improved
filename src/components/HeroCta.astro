---
// HeroCta.astro - Place this component before the footer
import { Image } from 'astro:assets';
import CtaBackground from '../assets/cta-background.svg';
---

<section class="hero-cta">
    <div class="background">
        <Image 
            src={CtaBackground} 
            alt="Background" 
            width={1200} 
            height={400} 
            class="bg-image"
        />
    </div>
    
    <div class="content">
        <h1 class="title">WELCOME TO GOLDEN LIFE</h1>
        <p class="subtitle">With Extensive Luxury and Unlimited Winning, Phoenix Casino is an unforgettable
            experience, visit us today!</p>
        <a href="/contact" class="cta-button">Book Now</a>
    </div>
</section>

<style>
    /* Hero CTA Section - Luxury Casino Style with Mobile Optimization */
    .hero-cta {
        position: relative;
        width: 90%;
        max-width: 1200px;
        margin: 40px auto;
        border: 1px solid rgba(231, 201, 128, 0.3);
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: #000;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 40px 20px;
        max-width: 800px;
    }

    .title {
        font-size: 52px;
        font-weight: 700;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
        background: linear-gradient(to right, #e7c980, #9e8253, #e7c980);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        font-size: 18px;
        line-height: 1.6;
        color: #fff;
        margin-bottom: 30px;
    }

    .cta-button {
        display: inline-block;
        background-color: #e7c980;
        color: #000;
        font-size: 18px;
        font-weight: 600;
        padding: 15px 40px;
        border-radius: 3px;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cta-button:hover {
        background-color: #d4b76e;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(231, 201, 128, 0.4);
    }

    @media (max-width: 768px) {
        .hero-cta {
            min-height: 350px;
            margin: 30px auto;
        }

        .title {
            font-size: 36px;
        }

        .subtitle {
            font-size: 16px;
        }

        .cta-button {
            padding: 12px 30px;
            font-size: 16px;
        }
    }

    @media (max-width: 480px) {
        .hero-cta {
            min-height: 300px;
            margin: 20px auto;
            width: 95%;
        }

        .content {
            padding: 30px 15px;
        }

        .title {
            font-size: 28px;
        }

        .subtitle {
            font-size: 15px;
            margin-bottom: 25px;
        }

        .cta-button {
            padding: 10px 25px;
            font-size: 15px;
        }
    }
</style> 